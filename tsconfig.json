{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "strict": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "lib": ["es7", "dom"],
        "baseUrl": ".",
        "paths" :{
            "~/*":["src/*"],
            "@/*":["src/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules"]
}